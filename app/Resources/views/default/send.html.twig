{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
    <div class="col-md-4" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 5%">
{{ form_start(form, {'style': 'border: 1px solid;'}) }}
        <div style="border-bottom: 1px solid;">
            <label style="font-family: 'Times New Roman';font-size: 36px;">Send Project</label>
        </div>
        <div class="form-group">
            <label class="col-md-12" style="font-family: 'Times New Roman';">{{ form_label(form.email) }}</label>
            <label class="col-md-12" style="margin-bottom: 5%;">{{ form_widget(form.email) }}</label>
        </div>
        <div class="form-group">
            <label class="col-md-12" style="font-family: 'Times New Roman';">{{ form_label(form.message) }}</label>
            <label class="col-md-12" style="margin-bottom: 5%;">{{ form_widget(form.message) }}</label>
        </div>
        <div class="form-group">
            <label class="col-md-12" style="font-family: 'Times New Roman';">{{ form_label(form.send) }}</label>
            <label class="col-md-12" style="margin-bottom: 5%;">{{ form_widget(form.send) }}</label>
        </div>
        <div style="display: none;">
            {{ form_rest(form) }}
        </div>
{{ form_end(form) }}
    </div>
{% endblock %}