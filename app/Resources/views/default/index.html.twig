{% extends 'simplebase.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
{{ form_start(form, {'class': 'form-inline'}) }}
<div class="col-md-3 centered" id="centered" style="border: 1px solid; margin-left: 37%; margin-right: 37%; margin-top: 15%">
	<div style="border-bottom: solid 1px;text-align: center; margin-bottom: 10%;">
		<label style="font-size: 36px; font-family: 'Times New Roman'">DEEVOO</label>
	</div>
	<div class="form-group">
	<label class="col-md-12" style="font-family: 'Times New Roman';">{{ form_label(form.username) }}</label>
	<label class="col-md-12" style="margin-bottom: 5%;">{{ form_widget(form.username) }}</label>
	</div>
	<div class="form-group">
	<label class="col-md-12" style="font-family: 'Times New Roman';">{{ form_label(form.password) }}</label>
	<label class="col-md-12" style="margin-bottom: 5%;">{{ form_widget(form.password) }}</label>
	</div>
	<div >
	<label class="col-md-12" style="margin-bottom: 5%;">{{ form_widget(form.login) }}</label>
	</div>
	</div>
<div style="display: none;">
{{ form_rest(form) }}
</div>

{{ form_end(form) }}
{% endblock %}
